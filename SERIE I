#include "stdafx.h"
#include "stdio.h"
#include "conio.h"
#include "math.h"

void main()
{
	printf("\t SERIE I\n");
	printf("\t =======\n");
	float x, fac, S, i, n;
	printf("INGRESE NUMERO X: ");
	scanf_s("%f",&x);
	printf("INGRESE NUMERO n: ");
	scanf_s("%f",&n);
	fac = 1;
	S = 0;
	for(i=0; i<n; i++)
	{
		S = S + pow(x,i) / fac ;
		printf("Serie = X %f / %f\n", i, fac);
		fac = fac * (i+1);
	}
	
	printf("\nLa suma de Su serie es %f",S);

	_getch();
}
